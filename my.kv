    GridLayout:
        cols: 1

        Label:
            text: "Score"

        GridLayout:
            cols: 1

            Button:
                text: "Grammar"
                on_release:
                    root.Gpop()

            Button:
                text: "Vocab"
                on_release:
                    root.Vpop()

            Button:
                text: "Kanji"
                on_release:
                    root.Kpop()

        Button:
            text: "Back"
            on_release:
                app.root.current = "diff"
                root.manager.transition.direction = "right"



<GrammarPop>:
    title: 'Grammar'
    size_hint: (None, None)
    size: (400, 400)
    GridLayout:
        cols: 1

        Label:
            text: "Item"

        Label:
            text: "JP Sentence"

        Label:
            text: "EN Sentence"

        GridLayout:
            cols: 2

            Button:
                text: "Add Bookmark"

            Button:
                text: "Close"
                on_release:
                    root.dismiss()



