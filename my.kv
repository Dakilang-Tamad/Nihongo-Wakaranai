WindowManager:
    LoadingScreen:
    HomeScreen:
    DifficultySelection:
    BookmarkCategories:
    BookmarkedItems:
    SettingsScreen:
    Courses:
    GrammarItem:
    VocabItem:
    KanjiItem:
    EndQuizz:

<LoadingScreen>:
    name: "load"

    GridLayout:
        cols: 1

        Label:
            font_name: "komorebi"
            text: root.text


<HomeScreen>:
    name: "home"

    GridLayout:
        cols: 2

        Button:
            text: "Quiz"
            on_release:
                app.root.current = "diff"
                root.manager.transition.direction = "left"

        Button:
            text: "Settings"
            on_release:
                app.root.current = "settings"
                root.manager.transition.direction = "left"

        Button:
            text: "Courses"
            on_release:
                app.root.current = "courses"
                root.manager.transition.direction = "left"

        Button:
            text: "Bookmarks"
            on_release:
                app.root.current = "bookc"
                root.manager.transition.direction = "left"


<DifficultySelection>:
    name: "diff"

    GridLayout:
        cols: 2

        Button:
            text: "N5"
            on_release:
                root.start5()
                root.manager.transition.direction = "left"

        Button:
            text: "N4"
            on_release:
                app.root.current = "grammari"
                root.manager.transition.direction = "left"

        Button:
            text: "N3"
            on_release:
                app.root.current = "grammari"
                root.manager.transition.direction = "left"

        Button:
            text: "N2"
            on_release:
                app.root.current = "grammari"
                root.manager.transition.direction = "left"

        Button:
            text: "N1"
            on_release:
                app.root.current = "grammari"
                root.manager.transition.direction = "left"

        Button:
            text: "Back"
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"


<BookmarkCategories>:
    name: "bookc"

    GridLayout:
        cols: 1

        Button:
            text: "Grammar"
            on_release:
                app.root.current = "booki"
                root.manager.transition.direction = "left"

        Button:
            text: "Vocab"
            on_release:
                app.root.current = "booki"
                root.manager.transition.direction = "left"

        Button:
            text: "Kanji"
            on_release:
                app.root.current = "booki"
                root.manager.transition.direction = "left"

        Button:
            text: "Back"
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"



<BookmarkedItems>:
    name: "booki"

    GridLayout:
        cols: 1

        Button:
            text: "Grammar"
            on_release:
                root.Gpop()

        Button:
            text: "Vocab"
            on_release:
                root.Vpop()

        Button:
            text: "Kanji"
            on_release:
                root.Kpop()

        Button:
            text: "Back"
            on_release:
                app.root.current = "bookc"
                root.manager.transition.direction = "right"



<SettingsScreen>:
    name: "settings"

    GridLayout:
        cols: 1

        Button:
            text: "Currently Empty"
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"



<Courses>:
    name: "courses"

    GridLayout:
        cols: 1

        Button:
            text: "Back"
            on_release:
                app.root.current = "home"
                root.manager.transition.direction = "right"


